#!/usr/bin/env zsh
#
# zmodload zsh/zprof
#

# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.config/zsh/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [ -z "$VIRTUAL_ENV" ]; then
   if [[ -r "$XDG_CACHE_HOME/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
     source "$XDG_CACHE_HOME/p10k-instant-prompt-${(%):-%n}.zsh"
   fi
fi

# disable the goddamn beep!
unsetopt BEEP

source "$XDG_CONFIG_HOME/zsh/.zsh_aliases"

source "$XDG_CONFIG_HOME/zsh/.zsh_functions"

if [ ! -z $ZSH_INIT_COMMAND ]; then
    eval "$ZSH_INIT_COMMAND"
fi

# # load homebrew
if [ -x "$HOME/.linuxbrew/bin/brew" ]; then
  eval "$("$HOME/.linuxbrew/bin/brew" shellenv)"
fi

# quick modules
fpath=("$XDG_CONFIG_HOME/zsh/modules" "${fpath[@]}")

# load modules
autoload -Uz kp

source <(antibody init)

antibody bundle < ~/.config/zsh/.zsh_plugins.txt

source "$XDG_CONFIG_HOME/zsh/.zsh_prompt"

source "$XDG_CONFIG_HOME/fzf/fzf.zsh"

source "$XDG_CONFIG_HOME/lf/lf.zsh"

# zprof
