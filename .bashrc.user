#!/usr/bin/env bash

export XDG_CONFIG_HOME="$HOME/.config"

export XDG_DATA_HOME="$HOME/.local/share"

export XDG_CACHE_HOME="$HOME/.cache"

[ -f "$XDG_CONFIG_HOME/bash/.bash_aliases" ] && source "$XDG_CONFIG_HOME/bash/.bash_aliases"

[ -f "$XDG_CONFIG_HOME/bash/.bash_prompt" ] && source "$XDG_CONFIG_HOME/bash/.bash_prompt"

[ -f "$XDG_CONFIG_HOME/bash/.bash_git" ] && source "$XDG_CONFIG_HOME/bash/.bash_git" 

# check the window size# don't put duplicate lines or lines starting with space in the history.
# See bash(1) for more options
HISTCONTROL=ignoreboth after each command and, if necessary,

# colored GCC warnings and errors
export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'

# append to the history file, don't overwrite it
shopt -s histappend

# for setting history length see HISTSIZE and HISTFILESIZE in bash(1)
HISTSIZE=1000
HISTFILESIZE=2000

# update the values of LINES and COLUMNS.
shopt -s checkwinsize
PROMPT_COMMAND='history -a'

if ! shopt -oq posix; then
  if [ -f /usr/share/bash-completion/bash_completion ]; then
    . /usr/share/bash-completion/bash_completion
  elif [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
  fi
fi
