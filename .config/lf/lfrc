set shellopts '-eu'

set hidden true
set icons true
set ignorecase true
set info size:time
set period 1
set preview true
set previewer ~/.config/lf/preview
set ratios 1:1:3
set scrolloff 10

# TODO: figure out why zle-cd is broken..
cmd zle-cd %printf 'cd %q && zle reset-prompt\n' "$PWD" >&$ZLE_FIFO

cmd zle-insert-relative %{{
  for f in "$fx"; do
    printf 'LBUFFER+="${LBUFFER:+ }${(q)$(realpath %q --relative-to=$PWD)}"\n' "$f" >&$ZLE_FIFO
  done
}}
cmd zle-insert-absolute %{{
  for f in "$fx"; do
    printf 'LBUFFER+="${LBUFFER:+ }%q"\n' "$f" >&$ZLE_FIFO
  done
}}

cmd zle-init :{{
  map . zle-cd
  map x zle-insert-relative
  map X zle-insert-absolute
}}

# fzf integration
cmd fzf_jump ${{
  res="$(find . -maxdepth 1 | fzf --reverse --header='Jump to location')"
  if [ -f "$res" ]; then
    cmd="select"
  elif [ -d "$res" ]; then
    cmd="cd"                                                       
  fi
  lf -remote "send $id $cmd \"$res\""
}}

# zoxide integration https://github.com/gokcehan/lf/issues/540
cmd zjump %lf -remote "send $id cd '$(zoxide query $1)'"
map <c-e> push :zjump<space>


cmd open ${{
  case $(file --mime-type "$f" -b) in
    text/*) $EDITOR "$fx";;
    *) for f in "$fx"; do setsid $OPENER "$f" > /dev/null 2> /dev/null & done;;
  esac
}}

cmd vmux_send ${{
  VMUX_NOT_SELECT_PANE=1 vmux "$fx" 
}}

cmd yank-dirname $dirname -- "$f" | head -c-1 | xclip -i -selection clipboard
cmd yank-path $printf '%s' "$fx" | xclip -i -selection clipboard
cmd yank-basename $basename -a -- "$fx" | head -c-1 | xclip -i -selection clipboard

cmd mkdir %[ -n "${1}" ] && mkdir -p ${@} || echo "Argument needed"
cmd mkfile %[ -n "${1}" ] && touch ${@} || echo "Argument needed"

cmd trash ${{
    set -f
    printf "$fx\n"
    printf "delete?[y/n]"
    read ans
    [ $ans = "y" ] && gio trash $fx
}}


# define a custom 'delete' command
cmd delete ${{
  printf "$fx\n"
  printf "delete?[y/n]"
  read ans
  [ $ans = "y" ] && rm -rf "$fx"
}}

# FIXME: not working currently
cmd bulkrename ${{
  bash -c "vimv $fx"
}}

# check the terminal width on startup and set number of columns accordingly
%{{
  w=$(tput cols)
  if [ $w -le 80 ]; then
    lf -remote "send $id set ratios 1:2"
  elif [ $w -le 160 ]; then
    lf -remote "send $id set ratios 1:2:3"
  else
    lf -remote "send $id set ratios 1:2:3:5"
  fi
}}

# start an lf server for ZLE integration
&[[ -n "$ZLE_FIFO" ]] && lf -remote "send $id zle-init"

# make sure trash folder exists
%mkdir -p ~/.local/share/Trash

# Basic Functions
map <esc> quit
map <c-q> quit
map <c-r> reload
map <enter> open
map C clear
map H top
map L bottom
map u unselect
map br bulkrename
map r push :rename<space>
map i $bat --pager='less -Rf' ---color=always --number --wrap auto --paging=always "$f" 

# create dir/file
map ad push $mkdir<space>
map af push $touch<space>

# Tmux
map tv &tmux split-window -h zsh
map tb &tmux split-window -v zsh
map t+ &tmux split-window -h zsh
map t- &tmux split-window -v zsh

map d cut 
map y copy
map p paste

map <c-y> yank-path
map Yd yank-dirname
map Yb yank-basename

map Dd trash
map Dt trash
map DT delete

map <c-f> :fzf_jump
map <c-t> $lf -remote "send $id select '$(fzf)'"

map E vmux_send
map Xvp push :!nvim<space>

# Semi Bookmarks
map gr cd /repo/ekhhaga
map gc cd ~/.config
map gs cd ~/.scripts
map gd cd ~/.local/share
map gl cd ~/local
# show documentation
map g? $lf -doc | bat -l man

