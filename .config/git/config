[core]
  pager = delta --paging=always || less
[interactive]
  diffFilter = delta --color-only || less
[delta]
  features = decorations unobtrusive-line-numbers
  line-numbers = true
  whitespace-error-style = 22 reverse
[color]
  ui = true
  colorMoved = default
[pull]
  rebase = true
[fetch]
  prune = true
[mergetool "nvim"] 
  cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"
[merge]
  tool = nvim
[mergetool] 
  prompt = true
[filter "spacify"]
  clean = expand --tabs=4 --initial
[alias]
  amend = commit --amend
  auto-commit = !git add -A && git commit -m "updates"
  force-push = push --force -u
  last = log -1 HEAD --stat
  reuse-msg = commit --reuse-message=ORIG_HEAD
  soft-reset = reset HEAD~1 --soft
  unstage = restore --staged .
  #############
  fa = fetch --all
  unshallow = !(git fetch --unshallow || git fetch --all) && git remote set-branches origin '*'
  qa = commit --amend --no-edit
  ro = !git rebase $(git rev-parse --abbrev-ref HEAD)
  smu = submodule update --init --recursive
  st = status
  #############
  potd = push origin HEAD:refs/drafts/master
  potm = push origin HEAD:refs/for/master
  #############
  dots = !git --git-dir="$HOME/.dtf.git" --work-tree="$HOME/"
  #############
