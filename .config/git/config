    pager = delta
[color]
    ui = true
[color "diff-highlight"]
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
    oldNormal = red bold
[color "diff"]
    meta = 11
    frag = magenta bold
    commit = yellow bold
    old = red bold
    new = green bold
    whitespace = red reverse
[pull]
    rebase = true
[fetch]
    prune = true
[diff]
    colorMoved = zebra
[mergetool "nvim"] 
    cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"
[merge]
    tool = nvim
[mergetool] # automatically launch merge tool without displaying a prompt
    prompt = false
[filter "spacify"]
    clean = expand --tabs=4 --initial
[alias]
    dots = "!git --git-dir=$HOME/.dtf.git --work-tree=$HOME"
    amend = commit --amend
    reuse-msg = commit --reuse-message=ORIG_HEAD
    soft-reset = reset HEAD~1 --soft
    quick-amend = commit --amend --no-edit
    qa = commit --amend --no-edit
    st = status
	ro = rebase origin/master
    smu = submodule update --init --recursive
	potd = push origin HEAD:refs/drafts/master
	potm = push origin HEAD:refs/for/master
